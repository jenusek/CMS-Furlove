{% extends 'base.html.twig' %}

{% block title %}FurLove | Aktualności{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('posts') }}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('posts') }}
{% endblock %}

{% block body %}
    <div style="width: 100%; height: 50vh; min-height: 350px; background-image: url('{{ asset('./build/images/about.jpg') }}'); background-size: cover; background-position: center"></div>
    <div class="container" style="font-family: 'Poppins', sans-serif">
        <h1 class="my-5"><b>Aktualności</b></h1>
        {% include 'components/updates/post.html.twig' %}

        {% if maxPages > 1 %}
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
                    <a class="page-link" href="{{ path('posts', {page: currentPage-1}) }}" tabindex="-1"><i class="fas fa-arrow-left"></i></a>
                </li>

                {% for i in 1..maxPages %}
                <li class="page-item {{ currentPage == i ? 'active' }}"><a class="page-link" href="{{ path('posts', {page: i}) }}">{{ i }}</a></li>
                {% endfor %}

                <li class="page-item {{ currentPage == maxPages ? 'disabled' }}">
                    <a class="page-link" href="{{ path('posts', {page: currentPage+1}) }}"><i class="fas fa-arrow-right"></i></a>
                </li>
            </ul>
        </nav>
        {% endif %}
    </div>
{% endblock %}
