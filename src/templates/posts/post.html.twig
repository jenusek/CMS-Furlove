{% extends 'base.html.twig' %}

{% block title %}FurLove | Aktualno≈õci{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('posts') }}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('posts') }}
{% endblock %}

{% block body %}
    <div style="width: 100%; height: 50vh; min-height: 350px; background-image: url('{{ asset('./uploads/post/' ~ post.images[0].image.filePath) }}'); background-size: cover; background-position: center"></div>
    <div class="container" style="font-family: 'Poppins', sans-serif">
        <h1 class="my-5"><b>{{ post.title }}</b></h1>
        <p class="post-content">{{ post.content }}</p>

        <div id="carousel-md" class="d-none d-md-block">
            {% for image in post.images %}
                <a href="{{ asset("uploads/post/" ~ image.image.filePath) }}" data-lightbox="kitten-md">
                    <img style="width: 100%" src="{{ asset("uploads/post/" ~ image.image.filePath) }}"/>
                </a>
            {% endfor %}
        </div>

        <div id="carousel" class="d-block d-md-none">
            {% for image in post.images %}
                <a href="{{ asset("uploads/post/" ~ image.image.filePath) }}" data-lightbox="kitten">
                    <img style="width: 100%" src="{{ asset("uploads/post/" ~ image.image.filePath) }}"/>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
